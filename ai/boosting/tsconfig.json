{
	"compilerOptions": {
		"target": "es6",
		"moduleResolution": "node",
		"module": "esnext",
		"outDir": "./lib/",
		"sourceMap": true,
		"noImplicitAny": false,
		"removeComments": false,
		"downlevelIteration": true,
    "allowJs": true,
		"lib": [
			"es6",
			"es7",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@core": ["./src/core/index"],
      "@core/*": ["./src/core/*"],
    }
	},
	"include": [
		"./src/**/*"
	]
}